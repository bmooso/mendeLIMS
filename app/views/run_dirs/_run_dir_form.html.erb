<fieldset class="form">
<legend>Run Directory</legend>
  <table class="form">
  	<%=f.hidden_field(:flow_cell_id, :value => flow_cell.id) %> 
	<tr><%=f.collection_select(:storage_device_id, @storage_devices, :id, :device_name)%></tr>
	<tr><%=f.text_field(:rdir_name, :label => 'Dir Name') %></tr>
	<tr><%=f.text_field(:total_size_gb, :size => 8, :label => 'Dir Size (GB)') %></tr>
	<tr><%=f.text_field(:file_count, :size => 8, :label => '# Files') %></tr>
	<tr><%=f.datepicker 'date_sized', dateFormat: "yy-mm-dd", maxDate: '0', changeMonth: true, changeYear: true, yearRange: '-1', size: 15 %></tr>
	<tr><%=f.datepicker 'date_copied', dateFormat: "yy-mm-dd", maxDate: '0', changeMonth: true, changeYear: true, yearRange: '-1', size: 15 %></tr>
	<tr><%=f.datepicker 'date_verified', dateFormat: "yy-mm-dd", maxDate: '0', changeMonth: true, changeYear: true, yearRange: '-1', size: 15 %></tr>
	<tr><%=f.datepicker 'date_deleted', dateFormat: "yy-mm-dd", maxDate: '0', changeMonth: true, changeYear: true, yearRange: '-1', size: 15 %></tr>
	<tr><%=f.text_area(:notes, :tdcolspan => 2, :cols => 50, :rows => 2) %></tr> 
  </table>
</fieldset>
