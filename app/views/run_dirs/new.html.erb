<h1>Sequencing Run:</h1>

<%= render :partial => 'flow_cells/flow_cell_show', :locals => {:flow_cell => @flow_cell} %>

<%= render :partial => 'show_dirs', :locals => {:flow_cell => @flow_cell} %>

<div id="addnew">
  <% if can? :new, RunDir %>
    <p><%= link_to "Add new run directory", '', :onclick => "showHideDiv('addnew','newdir'); return false;" %> |
	   <%= link_to "List All", run_dirs_path %></p>
  <% end %>
</div>

<div id="newdir", style="display:none">
<b>New run directory:</b>
<%= tagged_form_for @run_dir, :url => {:controller => 'run_dirs', :action=> 'create'} do |f| %> 
  <%= render '/shared/errors', model: @run_dir %>
  
  <%= render :partial => 'run_dir_form', :locals => {:f => f, :flow_cell => @flow_cell} %>
  
  <%=raw break_clear(f.submit "Save") %>
<% end %>
</div>

