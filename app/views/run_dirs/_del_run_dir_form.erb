<fieldset class="form">
<legend>Delete Runs from <%= @dev_name %></legend>
  <table class="form-with-columns" cellspacing="2">
  <tr>
    <th>Delete</th>
    <th>Date</th>
  	<th>Sequencing Run</th>
	<th>Date Sized</th>
    <th># Files</th>
    <th>Size (GB)</th>
  </tr>
  <% @run_dirs.each do |dir| %>
  <tr>
    <td><%= check_box_tag("run_dir[id][]", dir.id)%></td>
    <td><%= calendar_date_select_tag("run_dir[date_selected][]", Date.today, :size => 10) %></td>    
  	<td><%= link_to dir.flow_cell.sequencing_key, dir.flow_cell %></td>
	<td><%= dir.date_sized %></td>
    <td><%= dir.file_count %></td>
    <td><%= dir.total_size_gb %></td>
  </tr>
  <% end %>
  </table>
</fieldset>
<%= break_clear %>