<% if sample.processed_samples.size > 0 %>
<td> <%=link_to sample.processed_samples.size, :controller => :processed_samples,
                       :action => :show_by_sample, :sample_id => sample.id   %></td>
<% else %>
<td><%=h sample.processed_samples.size %></td>
<% end %>

<% if can? :delete, sample %>
  <% if sample.processed_samples.size == 0 %>
    <td><%= link_to 'Delete', sample, :confirm => 'Are you sure?', :method => :delete %>
  <% else %>
    <td class="ltgrey"> Delete </td>
  <% end %>
<% end %>