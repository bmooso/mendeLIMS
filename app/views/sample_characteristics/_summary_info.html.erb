<% last_info_box ||= 'no' %>

<!-- Standard fields to be displayed -->
<% info_flds   = [['Field', 'Collected on', sample_characteristic.collection_date],
                  ['Field', 'Clinic', sample_characteristic.clinic_or_location], 
                  ['Field', 'Protocol', sample_characteristic.consent_descr],
                  ['Field', 'Sample Site', sample.sample_tissue],
				  ['Field', 'Sample Type', sample.sample_type]] %>
				  
<!-- Only include comments if non-blank -->
<% info_flds.push(['Field', 'Comments', sample.comments]) if !sample.comments.blank? %>

<!-- Links to be displayed with borders, in bottom row of info box -->
<% info_links = [] %>

<%= render :partial => 'shared/info_box', :locals => {:info_legend     => 'Sample Acquisition/Characteristics',
                                                      :info_flds       => info_flds,
                                                      :info_links      => info_links,
                                                      :link_controller => 'sample_characteristics',
                                                      :link_id         => sample_characteristic.id,
                                                      :last_info_box   => last_info_box} %>