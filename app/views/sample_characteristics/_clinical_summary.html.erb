<% last_info_box ||= 'no' %>

<% click_to_link ||= 'none' %>
<% click_to_link = 'none' if (click_to_link == 'edit' && (cannot? :edit, patient))%>
<% click_to_link = 'none' if (click_to_link == 'show' && (cannot? :read, patient))%>

<!-- Standard fields to be displayed -->
<% info_flds   = [[(click_to_link == 'none'? 'Field' : 'Link'), 'Patient ID', sample_characteristic.patient_id, click_to_link],
                   nil, 
                  ['Field', 'Gender', patient.gender],
                  ['Field', 'Race/Ethnicity', [patient.race, patient.ethnicity].join('/')],
                  ['Field', 'Collected on', sample_characteristic.collection_date], nil,
                  ['Field', 'Clinic', sample_characteristic.clinic_or_location], nil, 
                  ['Field', 'Protocol', sample_characteristic.consent_descr]] %>
				  
<!-- Only include comments if non-blank -->
<% info_flds.push(['Field', 'Comments', sample_characteristic.comments]) if !sample_characteristic.comments.blank? %>

<!-- Links to be displayed with borders, in bottom row of info box -->
<% info_links = [] %>

<%= render :partial => 'shared/info_box', :locals => {:info_legend     => 'Patient/Sample Acquisition',
                                                      :info_flds       => info_flds,
                                                      :info_links      => info_links,
                                                      :link_controller => 'patients',
                                                      :link_id         => sample_characteristic.patient_id,
													  :last_info_box   => last_info_box} %>