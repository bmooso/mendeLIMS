<fieldset class="form">
<legend class="form">Assay defaults</legend>
<table class="form" border="0">
<tr>
  <th>Owner:</th><td><%= select_tag("assay_default[owner]", options_for_select(@owners, @requester))%></td> 
  <th>Date:</th><td><%= calendar_date_select_tag("assay_default[preparation_date]", Date.today, :size => 15) %></td>  
</tr>
<tr>
  <th>Protocol:</th><td><%= collection_select(:assay_default, :protocol_id, @protocols, :id, :protocol_name,
                           {:include_blank => 'Select Protocol'}) %></td>
  <th>Volume:</th><td><%= text_field(:assay_default, :volume, :size => 8) %></td>
  <th>Concentration:</th><td><%= text_field(:assay_default, :concentration, :size => 10) %></td>	
</tr>
<tr>  
  <th>Notes:</th>
  <td colspan="5"><%= text_field(:assay_default, :notes, :size => 80) %></td>
</tr>
</table>
</fieldset>