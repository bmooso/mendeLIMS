<span class="table_title">Attached Files:</span>
  <table class="info">
  <% if !obj.attached_files.empty? %>
	<% obj.attached_files.each do |att_file| %>
	  <tr>
        <td><%=link_to att_file.basename_with_ext, att_file %></td>
		<td><%=h att_file.notes %></td>
	    <td class="linkborder"><%=link_to 'Delete File', att_file, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
      <% end %>
  <% else %>
      <tr><td>None</td></tr>
  <% end %>	
  </table>
  