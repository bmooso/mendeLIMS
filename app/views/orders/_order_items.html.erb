<div class="order_item">
  <% new_or_existing = item.new_record? ? 'new' : 'existing' %>
  <% prefix = "order[#{new_or_existing}_item_attributes][]" %>
  
  <% fields_for prefix, item do |m| %>
  <table class="form-with-columns-no-th-underline">
  	<tr>
  	  <th>Date</th>
	  <th>Requestor</th>
	  <th>Company</th>
	  <th>Catalog#</th>
	  <th style="text-align:center;">Quantity</th>
	  <th style="text-align:center">Chemical?</th>
	  <th>Recv'd?</th> 
  	</tr>

    <tr>
	  <td><%=h format_date(item.created_at) %></td>
	  <td><%=h item.requester_name %></td>
	  <td><%=h item.company_name %></td>
	  <td><%=h item.catalog_nr %></td>
	  <td style="text-align:center;"><%=h item.item_quantity %></td>
	  <td style="text-align:center;"><%=h item.chemical_flag %></td>
	  <td><%=m.select(:item_received, %w{Y N}, {:include_blank => true}) %></td>
	</tr>
	<tr>
	  <td style="text-align:right;"><b>Description:</b></td>
	  <td colspan=5 width="75%"><div class="wrap-line"><%=h item.item_description %></div></td>
  	<tr>
	  <td style="text-align:right;"><b>Notes:</b></td>
	  <td colspan=5><%=m.text_field :notes, :size => 95 %></td>
	</tr>
  </table>
  <% end %>
</div>
	
	