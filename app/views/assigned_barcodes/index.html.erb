<h1>Assigned Barcode Ranges</h1>

<table class="list">
  <tr>
    <th>Assigned Date</th>
    <th>Group</th>
	<th>Owner</th>
	<th>Sample Type</th>
	<th>Range Start</th>
	<th>Range End</th>
    <th colspan="2"></th>
  </tr>

<% for assigned_barcode in @assigned_barcodes %>
  <tr>
    <td><%=h assigned_barcode.assign_date %></td>
    <td><%=h assigned_barcode.group_name %></td>
	<td><%=h assigned_barcode.owner_name %></td>
	<td><%=h assigned_barcode.sample_type %></td>
	<td><%=h assigned_barcode.start_barcode %></td>
	<td><%=h assigned_barcode.end_barcode %></td>
	<% if can? :edit, assigned_barcode %>
      <td><%= link_to 'Edit', edit_assigned_barcode_path(assigned_barcode) %></td>
	<% end %>
	<% if can? :delete, assigned_barcode %>
      <td><%= link_to 'Delete', assigned_barcode, :confirm => 'Are you sure?', :method => :delete %></td>
	<% end %>
  </tr>
<% end %>
</table>

<h1>Available Barcode Ranges</h1>

<table class="list">
  <tr>
	<th>Range Start</th>
	<th>Range End</th>
	<th></th>
  </tr>

<% for free_range in @free_ranges %>
  <tr>
    <td><%=h free_range[:start_range] %></td>
    <td><%=h free_range[:end_range] %></td>
	<% if can? :new, AssignedBarcode %>
      <td><%= link_to 'Assign', new_assigned_barcode_path(:start => free_range[:start_range], :end => free_range[:end_range]) %></td>
	<% end %>
  </tr>
<% end %>
</table>
