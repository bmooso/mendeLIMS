<h1>New category</h1>

<% form_for(@category) do |cform| %>
  <%= cform.error_messages %>

  <p>
    <%= cform.label :category %><br />
    <%= cform.text_field :category %>
  </p>
  <p>
    <%= cform.label :category_description %><br />
    <%= cform.text_field :category_description %>
  </p>
  
  <div id="category">
    <%= render :partial => 'cat_values', :locals => {:cform => cform} %>
  </div>
  
  <p>
    <%= cform.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>
