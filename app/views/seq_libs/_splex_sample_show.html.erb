<% last_info_box ||= 'no' %>

<!-- Standard fields to be displayed -->
<% info_flds   = [['Field', 'Sample Name', lib_sample.sample_name], 
                  ['Field', 'Source DNA', lib_sample.source_DNA],
                  ['Field', 'Notes', lib_sample.notes]] %>
				  
<!-- Only include comments if non-blank -->
<% info_flds.push(['Field', 'Comments', lib_sample.notes]) if !lib_sample.notes.blank? %>

<%= render :partial => 'shared/info_box', :locals => {:info_legend     => 'Lib Sample',
                                                      :info_flds       => info_flds,
                                                      :info_links      => [],
                                                      :last_info_box   => last_info_box} %>
													  